{
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.fixAll.eslint": "explicit"
    },
    "eslint.enable": true,
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact",
      "vue" // optional, only if you're using Vue
    ],
    "eslint.alwaysShowStatus": true,
    "editor.formatOnSave": false
  }
  